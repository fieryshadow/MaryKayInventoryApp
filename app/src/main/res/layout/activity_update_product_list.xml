<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.byui.shane.marykayinventoryapp.UpdateProductListActivity">

    <TextView
        android:id="@+id/ProductNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="Product Number: " />

    <EditText
        android:id="@+id/ProductCategory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ProductNumber"
        android:hint="Product Category"/>

    <EditText
        android:id="@+id/ProductName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ProductCategory"
        android:hint="Product Name"/>

    <EditText
        android:id="@+id/ProductSection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/color"
        android:hint="Product Section" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/color"
        android:hint="Product Color"
        android:layout_below="@+id/ProductName"/>

    <EditText
        android:id="@+id/NumberofProduct"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ProductSection"
        android:hint="How much Product" />


    <Button
        android:id="@+id/submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Submit"/>
</RelativeLayout>
