<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/middleman"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/anchor"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/middleman" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffa17c71"
        android:adjustViewBounds="false"
        android:elevation="5dp"
        android:layout_marginBottom="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Category"
        android:id="@+id/categoryView"
        android:layout_below="@+id/nameView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView"
        android:layout_alignLeft="@+id/nameView"
        android:layout_alignStart="@+id/nameView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Name"
        android:id="@+id/nameView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Stock Status"
        android:id="@+id/stockStatusView"
        android:gravity="end"
        android:layout_below="@+id/colorView"
        android:layout_alignLeft="@+id/colorView"
        android:layout_alignStart="@+id/colorView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ff8b8b8b" />
    <!--android:textAlignment="gravity"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Color"
        android:id="@+id/colorView"
        android:layout_below="@+id/categoryView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/categoryView"
        android:layout_alignStart="@+id/categoryView"
        android:layout_marginTop="5dp"
        android:textColor="#ff8b8b8b" />
</RelativeLayout>